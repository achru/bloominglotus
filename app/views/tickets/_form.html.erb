<%= form_for @ticket, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :entries, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :entries, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valid_until, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :valid_until, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unlimited, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :unlimited, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  tickets_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
